<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.AddMemberFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_many_members_you_can_add_text"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingHorizontal="@dimen/add_member_text_padding_horizontal"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/explanation_if_number_is_blank"
        android:textSize="15sp"
        android:paddingHorizontal="@dimen/add_member_text_padding_horizontal"/>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="3dp"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/MemberIdTextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_member_id"
            style="@style/MemberIdEditText"
            android:paddingHorizontal="@dimen/add_member_padding_horizontal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/MemberNameTextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_member_name"
            style="@style/MemberNameEditText"
            android:paddingHorizontal="@dimen/add_member_padding_horizontal"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="@dimen/add_member_divider_thickness"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/MemberIdTextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/second_member_id"
            style="@style/MemberIdEditText"
            android:paddingHorizontal="@dimen/add_member_padding_horizontal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/MemberNameTextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/second_member_name"
            style="@style/MemberNameEditText"
            android:paddingHorizontal="@dimen/add_member_padding_horizontal"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="@dimen/add_member_divider_thickness"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/MemberIdTextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/third_member_id"
            style="@style/MemberIdEditText"
            android:paddingHorizontal="@dimen/add_member_padding_horizontal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/MemberNameTextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/third_member_name"
            style="@style/MemberNameEditText"
            android:paddingHorizontal="@dimen/add_member_padding_horizontal"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="@dimen/add_member_divider_thickness"/>


</androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>