<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MemberIdEditText" parent="android:Widget">
        <item name="android:layout_width">@dimen/add_member_id_edit_text_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:hint">@string/optional_member_id_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">9</item>
        <item name="android:textSize">@dimen/add_member_text_size</item>
    </style>

    <style name="MemberNameEditText" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:hint">@string/required_member_name_hint</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">@dimen/add_member_text_size</item>
    </style>

    <style name="MemberCheckBox" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">clip_vertical</item>
        <item name="android:text">@string/color_check_box_text</item>
        <item name="android:textSize">@dimen/add_member_check_box_text_size</item>
    </style>

    <style name="ListItemDivider" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerThickness">2dp</item>
    </style>

    <style name="OrderDisplayedMainInfo" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="OrderDisplayedSubInfo" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="Color_Circle" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:src">@drawable/circle_border</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:contentDescription">Color palette</item>
    </style>

</resources>